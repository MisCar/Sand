{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "yarn build",
    "beforeDevCommand": "yarn dev",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Sand",
    "version": "0.1.19"
  },
  "tauri": {
    "allowlist": {
      "dialog": {
        "open": true,
        "save": true,
        "confirm": true
      },
      "fs": {
        "readFile": true,
        "writeFile": true,
        "createDir": true,
        "exists": true,
        "scope": ["**"]
      },
      "path": {
        "all": true
      },
      "window": {
        "setDecorations": true,
        "setPosition": true,
        "setResizable": true,
        "setSize": true,
        "setAlwaysOnTop": true
      },
      "globalShortcut": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "org.miscar.sand",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://gist.github.com/noamzaks/bf7b36637119c0ec6617dcd64eefc578/raw"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDQ3QkQ0RTE2OUQ5MjQyRTUKUldUbFFwS2RGazY5UnpIb1lXam1YNUh1UFNiV0Z3NzB6QWRCbGRPVktCaExLbmY3cDVuUW56OHkK"
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 880,
        "resizable": true,
        "title": "Sand",
        "width": 1920,
        "x": 0,
        "y": 0,
        "fileDropEnabled": false,
        "additionalBrowserArgs": "--allow-running-insecure-content"
      }
    ]
  }
}
